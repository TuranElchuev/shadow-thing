{  
    "title": "MyThing",

    "properties": {
        "temperature": {
            "description": "Temperature value of the weather station",
            "type": "number",
            "minimum": -32.5,
            "maximum": 55.2,
            "unit": "om:degree_Celsius",

            "processes": {
                "onRead": {
                    "triggers": [
                        {
                            "runtimeEvent": "readProperty",
                            "interactionAffordance": "temperature"
                        }
                    ],
                    "instructions": [
                        { "log": "Called: /p/temperature/processes/onRead" },
                        {
                            "move": {
                                "from": {
                                    "expression": {
                                        "expr": "random(20,23)"
                                    }
                                },
                                "to": {
                                    "pointer": "/p/temperature/o"
                                }
                            }
                        }
                    ]
                },
                "onWrite": {
                    "triggers": [
                        {
                            "runtimeEvent": "writeProperty",
                            "interactionAffordance": "temperature"
                        }
                    ],
                    "instructions": [
                        { "log": "Called: /p/temperature/processes/onWrite" }
                    ]
                }
            }
        },

        "threshold": {
            "description": "Temperature threshold above which an overheat event should be fired",
            "type": "number",
            "minimum": 25,
            "maximum": 55.2,
            "unit": "om:degree_Celsius",

            "processes": {                
                "onWrite": {
                    "triggers": [
                        {
                            "runtimeEvent": "writeProperty",
                            "interactionAffordance": "threshold"
                        }
                    ],
                    "instructions": [
                        { 
                            "move": {
                                "from": { "pointer": "/p/threshold/i" },
                                "to": { "pointer": "/p/threshold/o" }
                            }
                        }
                    ]
                }
            }
        }
    },

    "actions": {
        "setThreshold": {
            "input": {
                "type": "number"
            },
            "output": {
                "type": "number"
            }
        }
    },

    "events": {
        "overheat": {
            "data": {
                "type": "string"
            }
        }
    }
}