{
    "title": "Configuration File Schema",
    "description": "JSON Schema for validating configuration files for virtual-thing.",
    "$schema": "http://json-schema.org/draft-07/schema#",

    "type": "object",
    "properties": {
        "servient": {
            "type": "object",
            "properties": {
                "staticAddress": {
                    "type": "string"
                },
                "http": {
                    "type": "object",
                    "properties": {
                        "port": {
                            "type": "integer",
                            "minimum": 1024,
                            "maximum": 49151
                        },
                        "address": {
                            "type": "string"
                        },
                        "proxy": {
                            "type": "object"
                        },
                        "allowSelfSigned": {
                            "type": "boolean"
                        },
                        "serverKey": {
                            "type": "string"
                        },
                        "serverCert": {
                            "type": "string"
                        },
                        "security": {
                            "type": "object"
                        }
                    }
                },
                "coap": {
                    "type": "object",
                    "properties": {
                        "port": {
                            "type": "number",
                            "minimum": 1024,
                            "maximum": 49151
                        },
                        "address": {
                            "type": "string"
                        }
                    }
                },
                "mqtt":{
                    "type": "object",
                    "properties": {
                        "online": {
                            "type": "object",
                            "properties": {
                                "uri":{
                                    "type": "string"
                                },
                                "username":{
                                    "type": "string"
                                },
                                "password":{
                                    "type": "string"
                                },
                                "clientId":{
                                    "type": "string"
                                }
                            }
                        },
                        "local": {
                            "type": "object",
                            "properties": {
                                "port": {
                                    "type": "integer",
                                    "minimum": 1024,
                                    "maximum": 49151
                                }
                            }
                        }
                    }
                }
            },
            "required": ["staticAddress"],
            "additionalProperties": false
        },
        "log": {
            "type": "object",
            "properties": {
                "level": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 4
                }
            },
            "required": ["level"],
            "additionalProperties": false
        },
        "things": {
            "type": "object"
        },
        "required": ["servient", "log", "things"],
        "additionalProperties": false
    }
}
