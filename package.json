{
  "name": "virtual-thing",
  "version": "0.4.0",
  "description": "Creates and deploys a virtual thing based on its TD",
  "author": "Hassib Belhaj <https://github.com/hasbel>",
  "license": "MIT",
  "main": "dist/virtual-thing",
  "types": "dist/virtual-thing.d.ts",
  "bin": {
    "virtual-thing": "dist/cli.js"
  },
  "files": [
    "dist/",
    "examples/",
    "virtual-thing.conf.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tum-ei-esi/virtual-thing"
  },
  "keywords": [
    "wot",
    "iot",
    "thing",
    "thing description",
    "virtual",
    "digital twin"
  ],
  "devDependencies": {
    "typescript": "3.0.3",
    "wot-typescript-definitions": "0.6.0",
    "tslint": "5.11.0",
    "@types/node": "10.12.5"
  },
  "dependencies": {
    "@node-wot/core": "0.6.0",
    "@node-wot/binding-http": "0.6.0",
    "ajv": "6.5.5",
    "json-schema-faker": "0.4.7",
    "winston": "3.1.0"
  },
  "scripts": {
    "preinstall": "rm -rf thingweb.node-wot && rm -rf node_modules && rm -rf package-lock.json",
    "start": "node dist/cli.js",
    "start-twin": "node dist/cli.js -t examples/td/coffee_machine_td_8090.json",
    "build": "tsc"
  }
}
