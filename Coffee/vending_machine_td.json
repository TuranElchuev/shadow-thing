{
    "@context": "http://www.w3.org/ns/td",
    "@type": "Thing",
    "id": "de:tum:ei:esi:fp:vending",
    "name": "Virtual-Vending-Machine",
    "description": "A virtual vending machine to learn the WoT TD standard",
    "base": "http://localhost:8080/virtual-vending-machine/",
    "security": [{"scheme": "nosec"}],
    "properties": {
        "connected": {
            "type": "boolean",
            "readOnly": false,
            "forms": [{"href": "properties/connected"}]
        },
        "state": {
            "type": "string",
            "readOnly": false,
            "enum": ["Offline", "Ready", "Processing", "Error"],
            "forms": [{"href": "properties/state"}]
        }
    },
    "actions": {
        "info": {
            "forms": [{"href": "actions/info"}]
        },
        "error": {
            "forms": [{"href": "actions/error"}]
        }
    },
    "events":{
        "shutdown": {
            "data": {"type": "null"},
            "forms": [{
                "href": "events/shutdown",
                "subprotocol": "longpoll"
            }]
        },
        "order": {
            "data": {"type": "string"},
            "forms": [{
                "href": "events/order",
                "subprotocol": "longpoll"
            }]
        },
        "abort": {
            "data": {"type": "string"},
            "forms": [{
                "href": "events/abort",
                "subprotocol": "longpoll"
            }]
        }
    }
}